<script>
  function checkPasswordStrength() {
    const password = document.getElementById('passwordInput').value;
    const strengthDisplay = document.getElementById('passwordStrength');
    let strength = "";

    if (password.length < 8) {
      strength = "Weak: Your password should be at least 8 characters long.";
      strengthDisplay.style.color = 'red';
    } else if (password.length >= 8 && /[a-z]/.test(password) && /[A-Z]/.test(password) && /\d/.test(password) && /[!@#$%^&*]/.test(password)) {
      strength = "Strong: Great job! Your password is strong.";
      strengthDisplay.style.color = 'green';
    } else if (password.length >= 8 && /[a-zA-Z]/.test(password) && /\d/.test(password)) {
      strength = "Good: Your password is alright, but consider adding symbols for added security.";
      strengthDisplay.style.color = 'orange';
    } else if (password.length >= 8) {
      strength = "Alright: Your password could be improved by adding numbers and symbols.";
      strengthDisplay.style.color = 'yellow';
    }

    strengthDisplay.textContent = strength;
  }
</script>
